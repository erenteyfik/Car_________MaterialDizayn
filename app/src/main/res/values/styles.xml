<resources>

    <!-- main style bu. -->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>


        <item name="colorControlNormal">@android:color/white</item>


        <!-- MaterialDrawer specific values navigation menü özelliştirme için burdan selecedle primary textti kullandık-->
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
    </style>



    <style name="MyAlertDialog" parent="MaterialDrawerBaseTheme.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- bottom style bu. -->
    <style name="BottomTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
</resources>
